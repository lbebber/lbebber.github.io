whiteish = #FFEDDB
yellow = #F7F7B6
pink = #E96F92
purple = #75517D
blackish = #1B2947
green = #54fad4

font-sans='Avenir Next','Segoe ui',Ubuntu,sans-serif;
font-serif=Georgia,serif;

body
  background whiteish
  margin 0
  padding 0
  color blackish
  font-family font-serif
  font-size 20px
  line-height 1.6

.no-transition
  transition none

.yes-transition
  transition transform 500ms cubic-bezier(0.645, 0.045, 0.355, 1.000)
a
  color pink

p.heading
  font-size 1.2em
p
  margin 0.5em 0

.small
  font-size 0.8em

p.small
  margin 0

nav
  position absolute
  width 100%
  z-index 2
  padding-top 20px
  padding-bottom 20px
  text-align center

.ContactMenu
  position absolute
  width 100%
  z-index 2
  padding 20px 20px
  box-sizing border-box
  text-align right

.ContactMenu-link
  color whiteish
  font-family font-sans
  text-decoration none
  font-weight bold
  padding 10px 10px
  margin 0 10px
  font-size 0.8em

  span
    transition color 80ms, background-position 80ms ease-in
    background linear-gradient(180deg,transparent 94%, pink 94%, pink 100%)
    background-repeat repeat-x
    background-position 0 10px
    display inline-block
    padding-bottom 10px

  &:first-child
    margin-left 0

  &:last-child
    margin-right 0

  &:hover span
    transition color 80ms, background-position 80ms ease-out
    background-position 0 0
    color pink
.Nav-link
  color whiteish
  font-family font-sans
  text-decoration none
  font-weight bold
  padding 10px 40px
  margin 0 10px

  span
    transition color 80ms, background-position 80ms ease-in
    background linear-gradient(180deg,transparent 94%, pink 94%, pink 100%)
    background-repeat repeat-x
    background-position 0 10px
    display inline-block
    padding-bottom 10px

  &:first-child
    margin-left 0

  &:last-child
    margin-right 0

  &:hover span
    transition color 80ms, background-position 80ms ease-out
    background-position 0 0
    color pink

.text-center
  text-align center

absolute-fill()
  position absolute
  top 0
  left 0
  right 0
  bottom 0

.Header
  position relative
  min-height 300px
  height 75vh
  margin-bottom 90px

.Scene
  absolute-fill()

.Scene--bottom
  position relative
  width 100%
  transform rotate(180deg)
  -webkit-transform rotate(180deg)
  height 150px
  overflow hidden
  pointer-events none

.Scene-sky
  absolute-fill()
  background purple
  background linear-gradient(#1B2947, #282F51, #36365A, #443C63, #52426B, #614973, #704F7B, #815482, #935988, #A55D8D, #B86291, #CB6692, #DD6B93, #EC7691, #F18C90, #F3A195, #F3B6A0, #F3C9B2, #F3DCC7, #FFEDDB)


.Scene-stars
  position absolute
  top 0
  left 0 
  width 100%
  height 100%

.Scene-mountains
  position absolute
  bottom 0
  left 0
  width 100%
  height 300px
  margin-bottom -150px
  opacity 0
  transition opacity 100ms


.Scene-mountains--bottom
  margin-bottom 0

.Title
  font-family font-sans 
  color green
  position absolute
  top 50%
  width 100%
  text-align center
  text-transform uppercase
  margin-top -50px
  letter-spacing 0.2em
  font-size 45px
  line-height 1.4
  font-weight bold

.Title-big
  display block
  height 1em
  margin-bottom 0.2em

.Title-small
  display block
  font-size 0.6em
  color whiteish
  height 1em
  letter-spacing 0.2em
  margin-bottom 15px

.Title-Center 
  position relative
  width 0
  margin-left auto
  margin-right auto

.Title-Center-left
  position absolute
  right 10px
  margin-right -0.2em

.Title-Center-right
  position absolute
  left 10px

section
  padding-bottom 70px
  margin-bottom 50px
  position relative
  &::after
    content ''
    display block
    width 300px
    height 1px
    position absolute
    left 50%
    bottom 0
    margin-left - ( @width / 2 )
    background alpha(purple,0.15)

h2
  text-align center
  font-family font-sans
  font-size 40px
  margin 0
  padding-top 30px
  margin-bottom 30px
  &::after
    content ''
    background url('../img/separator.svg') no-repeat
    display block
    width 67px
    height 17px
    margin 18px auto 0 auto

