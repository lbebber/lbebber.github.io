h3
  margin 0
  font-family font-sans
  font-weight bold
  font-size 30px
  line-height 1

.container
  width 700px
  margin 0 auto

.Works
  list-style-type none
  margin 0
  padding 0
  font-size 0
  padding-top 20px

.Work
  display block
  margin-bottom 60px
  font-size 0
  &:last-child
    margin-bottom 30px

.Work-title
  line-height 1.2

.Work-subtitle
  font-family serif
  font-style italic
  font-size 20px
  color purple
  font-weight normal

.Work-text
  position relative
  display inline-block
  width 50%
  text-align right
  vertical-align middle
  box-sizing border-box
  padding-right 25px
  font-size 20px

.Work-description
  margin-top 1em
  margin-bottom 1.2em

.Work-image
  border-radius 2px 
  position relative
  display inline-block
  vertical-align middle
  border 6px solid white
  width 400px
  height 300px
  background alpha(purple,0.1)
  margin-right -250px
  margin-left 25px
  position relative
  box-shadow 1px 4px 25px alpha(purple,0.15)

  img
    width 100%

.Work-video
  width 100%
  height 100%
  position absolute
  top 0
  left 0

.Work-video--playing
  display block

.Work-video--paused
  display none
.Work-link
  display inline-block
  background pink
  font-size 0.85em
  padding 10px 20px
  color whiteish
  font-family font-sans
  text-decoration none
  font-weight bold
  box-shadow 3px 7px 20px alpha(purple,0.2)
  transition background 120ms, color 120ms

  &:hover
    background blackish
    color pink

  &:first-child
    margin-right 10px

.Work:nth-child(odd)
  .Work-text
    left 50%
    text-align left
    padding-right 0
    padding-left 25px
  .Work-image
    left -50%
    margin-left -85px

.Email
  // font-weight bold
  text-align center
  text-decoration none
  display inline-block
  margin 5px auto 40px auto
  font-size 30px

.Social
  margin-top 5px

.Social-link
  line-height 2

.Footer-link
  font-family font-sans
  text-decoration none
  color blackish
  background linear-gradient(180deg,transparent 94%, pink 94%, pink 100%)
  background-repeat repeat-x
  background-position 0 10px
  transition background-position 80ms ease-in, color 80ms
  strong
    color pink
    transition color 80ms

  &:hover strong
    color blackish

  &:hover
    // color pink
    background-position 0 0
    transition background-position 80ms ease-out, color 80ms

@media(max-width:950px) and (min-width:769px)
  .Work:nth-child(n) .Work-image
    width 300px
    height 225px
    margin-left 25px

  .Work:nth-child(even)
    .Work-text
      padding-right 15px

@media(max-width: 768px)
  .Scene-sky
    background-size 100% 97%
    background-repeat repeat-x
    background-color whiteish
  .Nav-link
    font-size 16px
    margin 0
    padding 10px 20px

  body
    font-size 16px
  section
    padding-bottom 50px
    margin-bottom 30px
  .Header
    height 75vh
    margin-bottom 60px
  .container
    width 100%
    padding-left 20px
    padding-right 20px
    box-sizing border-box
  .Title
    font-size 40px
  h2
    font-size 35px
    line-height 1
    padding-top 30px
    &::after
      margin-top 18px
      transform scale(0.8,0.8)
  .Title-Center
    width 100%
    text-align center
  .Title-Center-left,.Title-Center-right
    margin-right 0
    position static
  .Title
    letter-spacing 0
    text-transform none
  .Title-small
    letter-spacing 0
    text-transform none
    font-size 0.7em
  .Scene-mountains
    height 200px
    margin-bottom -100px
  .Scene--bottom
    height 100px
  .Scene-mountains--bottom
    margin-bottom 0
  .Email
    font-size 18px
    margin 10px 0 25px 0
  .Work:nth-child(n) 
    position relative
    padding-top 340px
    margin-bottom 100px
    padding-top 260px
    margin-bottom 60px
    &:last-child
      margin-bottom 20px
    .Work-text, .Work-image
      display block
      margin 0
      left auto
      right auto
      padding 0
    .Work-text
      width 100%
      text-align center
      font-size 16px
    .Work-image
      position absolute
      top 0
      left 50%
      width 300px
      margin-left - (( @width + 12px ) / 2)
      height 225px

  // .Social
    // margin-top 14px
  .Social-link
    font-size 18px

